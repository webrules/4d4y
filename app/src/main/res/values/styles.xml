<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light theme -->
    <style name="Theme.hipda" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dark theme using AppCompat -->
    <style name="Theme.hipda.Dark" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize dark theme here -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#121212</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">#121212</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#121212</item>
    </style>

</resources>
